<h3><%= @article.title %></h3>
<h5><%= @article.date.strftime("%A, %B %e, %Y") %></h5>
<p><%= @article.abstract %></p>

<h6>Add Comment</h6>
<%= form_for @comment do |f| %>
  <%= f.text_area :content %><br>
  <%= f.submit "Comment" %>
<% end %>

<% @article.comments.each do |comment| %>
  <p><%= comment.content %><br>
  &mdash; <%= "Yoda_" + Comment.random_string %></p>
<% end %>
