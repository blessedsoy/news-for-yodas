<h3><%= @article.title %></h3>
<h5><%= @article.date.strftime("%A, %B %e, %Y") %></h5>
<p><%= @article.abstract %></p>

<h6>Add Comment</h6>
<%= form_for @comment do |f| %>
  <%= hidden_field_tag "article_id", @article.id %>
  <%= f.text_area :content %><br>
  <%= f.submit "Comment" %>
<% end %>

<% @article.comments.each do |comment| %>
  <p><%= "Yoda_" + Comment.random_string + " says.. " %> &nbsp;&nbsp;  <%= comment.content %></p>
<% end %>
